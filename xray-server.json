{
  "log": {
    "loglevel": "warning"
  },
  "inbounds": [
    {
      "listen": "0.0.0.0",
      "port": 80,
      "protocol": "vless",
      "settings": {
        "clients": [
          {
            "id": "root",
            "level": 0
          }
        ],
        "decryption": "none"
      },
      "streamSettings": {
        "security": "none",
        "network": "httpupgrade",
        "httpupgradeSettings": {
          "host": "www.speedtest.net"
        }
      }
    }
  ],
  "outbounds": [
    {
      "protocol": "freedom"
    }
  ],
  "policy": {
    "levels": {
      "0": {
        "connIdle": 30
      }
    }
  }
}